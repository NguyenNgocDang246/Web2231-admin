<div class="container-fluid main-body">
    <div class="row">
        {{> navbar}}

        <main class="col-md-12 content main-content">
            <div class="container">
                <h1 class="text-center mb-4 text-orange">Thêm khuyến mãi</h1>
                <div class="card border-orange">
                    <div class="card-body">
                        <form action="/discount/add" method="POST">
                            <!-- Tên sản phẩm -->
                            <div class="mb-3">
                                <label for="code" class="form-label">Code</label>
                                <input type="text" class="form-control" id="code" name="code" placeholder="Nhập mã khuyến mãi" required>
                            </div>

                            {{!-- Loại --}}
                            <div class="mb-3">
                                <label for="type" class="form-label">Loại</label>
                                <select class="form-select" id="type" name="type" required>
                                    {{#each types}}
                                        <option value="{{this}}">
                                            {{#if (eq this "percent")}}
                                            Phần trăm
                                            {{else}}
                                            Số tiền
                                            {{/if}}
                                        </option>
                                    {{/each}}
                                </select>
                            </div>

                            <!-- Giá trị -->
                            <div class="mb-3">
                                <label for="value" class="form-label">Giá trị</label>
                                <input type="number" class="form-control" id="value" name="value" placeholder="Nhập giá trị khuyến mãi" required>
                            </div>
                            
                            {{!-- Ngày hết hạn --}}
                            <div class="mb-3">
                                <label for="expiredAt" class="form-label">Ngày hết hạn</label>
                                <input type="date" class="form-control" id="expiredAt" name="expiredAts" required>
                            </div>

                            <!-- Nút thêm -->
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-plus-circle"></i> Thêm sản phẩm
                                </button>
                            </div>

                            {{!-- Số lượng tối thiểu --}}
                            <div class="mb-3">
                                <label for="minAmount" class="form-label">Số lượng tối thiểu</label>
                                <input type="number" class="form-control" id="minAmount" name="minAmount" placeholder="Nhập số lượng tối thiểu" required>
                            </div>

                            {{!-- Trạng thái --}}
                            <div class="mb-3">
                                <label for="isActive" class="form-label">Trạng thái</label>
                                <input type="checkbox" class="form-check-input" id="isActive" name="isActive" checked>
                            </div>

                            <!-- Nút thêm -->
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-plus-circle"></i> Thêm sản phẩm
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
