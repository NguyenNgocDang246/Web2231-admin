<div class="container-fluid main-body">
  <div class="row">
    {{> navbar}}

  <main class="col-md-12 content main-content">
    <h2 class="text-center text-orange mb-4">
      <i class="fa-brands fa-product-hunt"></i> Danh Sách Khuyến Mãi
    </h2>

    <div class="card shadow">
      <div class="card-header">
       <h5 class="mb-0"><i class="fas fa-receipt me-2"></i> Danh Sách Khuyến Mãi</h5>
      </div>
      <div class="card-body">
        <table class="table table-bordered table-striped">
          <thead>
            <tr class="text-center">
              <th>STT</th>
              <th>Code</th>
              <th>Loại</th>
              <th>Giá trị</th>
              <th>Ngày hết hạn</th>
              <th>SL Tối thiểu</th>
            </tr>
          </thead>
          <tbody>
            {{#each discounts}}
              <tr class="product-row" data-id="{{this._id}}">
                <td class="text-center">{{inc @index}}</td>
                <td>{{this.code}}</td>
                <td>{{this.type}}</td>
                <td>{{this.value}}</td>
                <td>{{this.expiredAt}}</td>
                <td>{{this.minAmount}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>           
      </div>

      <div class="d-flex justify-content-center">
        <nav aria-label="Page navigation">
          <ul class="pagination">
            <!-- Prev Page -->
              <li class="page-item p-page {{#if prevPage}}enabled{{else}}disabled{{/if}}">
                <div class="page-link" {{#if prevPage}}data-page="{{prevPage}}"{{/if}}>
                  <span aria-hidden="true">&laquo;</span>
                </div>
              </li>

              <!-- Page Numbers -->
              {{#each pages}}
                <li class="page-item">
                  <div class="page-link" data-page="{{this}}">{{this}}</div>
                </li>
              {{/each}}

              <!-- Next Page -->
              <li class="page-item n-page {{#if nextPage}}enabled{{else}}disabled{{/if}}">
                <div class="page-link" {{#if nextPage}}data-page="{{nextPage}}"{{/if}}>
                  <span aria-hidden="true">&raquo;</span>
                </div>
              </li>
            </ul>
          </nav>
        </div>
    </div>
  </main>
  </div>
</div>

<style>
  .product-row {
    cursor: pointer;
    position: relative;
    transition: background-color 0.3s ease;
  }

  .product-row:hover {
    background-color: #f8f9fa;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const rows = document.querySelectorAll('.product-row');

    rows.forEach(row => {
      row.addEventListener('click', function() {
        const id = row.getAttribute('data-id');
        window.location.href = `/discount/id=${id}`;
      });
    });
  });
</script>

<script>
  document.addEventListener('DOMContentLoaded', function() {  

    const changeActive = () => {
      const pageLinks = document.querySelectorAll('.page-link');

      pageLinks.forEach(link => {
        link.parentElement.classList.remove('active');

        if (link.getAttribute('data-page') === currentPage.toString() && !link.parentElement.classList.contains('n-page') && !link.parentElement.classList.contains('p-page')) {
          link.parentElement.classList.add('active');
        }

        if (currentPage === 1 && link.parentElement.classList.contains('p-page')) {
          link.parentElement.classList.remove('enabled');
          link.parentElement.classList.add('disabled');
        }

        if (currentPage === totalPages && link.parentElement.classList.contains('n-page')) {
          link.parentElement.classList.remove('enabled');
          link.parentElement.classList.add('disabled');
        }

        if (currentPage !== 1 && link.parentElement.classList.contains('p-page')) {
          link.parentElement.classList.remove('disabled');
          link.parentElement.classList.add('enabled');
        }

        if (currentPage !== totalPages && link.parentElement.classList.contains('n-page')) {
          link.parentElement.classList.remove('disabled');
          link.parentElement.classList.add('enabled');
        }
      });
    };

    let currentPage = JSON.parse(JSON.stringify({{currentPage}}));
    let totalPages = JSON.parse(JSON.stringify({{totalPages}}));

    changeActive();
    const pageLinks = document.querySelectorAll('.page-link');

    pageLinks.forEach(link => {
      link.addEventListener('click', function() {
        const page = link.getAttribute('data-page');
        currentPage = parseInt(page);
        
        document.querySelector('.p-page').children[0].setAttribute('data-page', currentPage - 1);
        document.querySelector('.n-page').children[0].setAttribute('data-page', currentPage + 1);

        changeActive();
        fetch(`/discount/list?page=${page}`)
          .then(res => res.json())
          .then(data => {
            let html = '';
            data.forEach((discount, index) => {
              html += `
                <tr class="product-row" data-id="${discount._id}">
                  <td class="text-center">${index + 1}</td>
                  <td>${discount.code}</td>
                  <td>${discount.type}</td>
                  <td>${discount.value}</td>
                  <td>${discount.expiredAt}</td>
                  <td>${discount.minAmount}</td>
                </tr>
              `;
            });

            document.querySelector('tbody').innerHTML = html;
          })
      })
    });
  });

  // Search Order
    document.querySelector('#order-form').addEventListener('submit', function(e) {
        e.preventDefault();
        fetch(`/order/list?page=1`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ from: document.querySelector('#from').value, to: document.querySelector('#to').value}),
        })
        .then(res => res.json())
        .then(data => {
            let html = '';
            data.forEach((order, index) => {
            html += `
                <tr class="order-row" data-id="${order._id}">
                <td>${index + 1}</td>
                <td>${order.user.name}</td>
                <td>${order.totalAmount} VND</td>
                <td>${order.discount.value} VND</td>
                <td>
                    ${order.status === 'paid' ? '<span class="badge bg-success">Đã Thanh Toán</span>' : order.status === 'pending' ? '<span class="badge bg-warning">Đang Xử Lý</span>' : '<span class="badge bg-danger">Không thành công</span>'}
                </td>
                <td>
                    ${order.paymentMethod === 'cod' ? '<span class="badge bg-primary">COD</span>' : '<span class="badge bg-info">Chuyển khoản</span>'}
                </td>
                <td>
                    ${order.paymentStatus === 'paid' ? '<span class="badge bg-success">Đã Thanh Toán</span>' : order.paymentStatus === 'pending' ? '<span class="badge bg-warning">Chưa Thanh Toán</span>' : '<span class="badge bg-danger">Không thành công</span>'}
                </td>
                </tr>
            `;
            });
    
            document.querySelector('tbody').innerHTML = html;
        })
    });
</script>