<html lang="vi">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <link
      rel="shortcut icon"
      href="https://cdn.haitrieu.com/wp-content/uploads/2021/11/Logo-DH-Khoa-Hoc-Tu-Nhien-%E2%80%93-HCMUS-1024x851.png"
      type="image/x-icon"
    />

    <title>{{title}}</title>
  </head>

  <body>
    <header>
      <nav
        class="navbar navbar-expand-lg navbar-light bg-orange text-white px-3 fixed-top"
      >
        <div class="container-fluid">
          <!-- Logo và Tên Thương Hiệu -->
          <a class="navbar-brand d-flex align-items-center" href="/">
            <img
              src="https://cdn.haitrieu.com/wp-content/uploads/2021/11/Logo-DH-Khoa-Hoc-Tu-Nhien-%E2%80%93-HCMUS-1024x851.png"
              alt="Logo"
              class="me-3"
              style="height: 30px;"
            />
            <span class="fw-bold">CL STORE</span>
          </a>

          <!-- Nút Toggle cho Navbar nhỏ -->
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarContent"
            aria-controls="navbarContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          <!-- Nội dung Navbar -->
          <div class="collapse navbar-collapse" id="navbarContent">
            <!-- Thanh Tìm Kiếm -->
            <div
              class="d-flex mx-lg-auto ms-auto my-3 my-lg-0 justify-content-end"
              style="max-width: 300px; width: 100%;"
            >
              <form class="d-flex">
                <input
                  class="form-control me-2"
                  type="search"
                  placeholder="Tìm kiếm..."
                  aria-label="Search"
                />
                <button class="btn btn-outline-success" type="submit">
                  <i class="fas fa-search"></i>
                </button>
              </form>
            </div>

            <!-- Menu Dropdown -->
            <div
              class="d-flex align-items-center ms-auto justify-content-end"
              id="avt-section"
            >
              <!-- Avatar và Đăng Xuất -->
              <div class="dropdown">
                <a
                  href="#"
                  class="d-flex align-items-center text-decoration-none dropdown-toggle"
                  id="userDropdown"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  <img
                    src="https://via.placeholder.com/40"
                    alt="Avatar"
                    class="rounded-circle me-2"
                    style="width: 30px; height: 30px;"
                  />
                </a>
                <ul
                  class="dropdown-menu dropdown-menu-end"
                  aria-labelledby="userDropdown"
                >
                  <li><a class="dropdown-item fw-bold" href="#">Profile</a></li>
                  <li><a
                      class="dropdown-item fw-bold"
                      href="#"
                    >Settings</a></li>
                  <li>
                    <hr class="dropdown-divider" />
                  </li>
                  <li><a
                      class="dropdown-item text-danger fw-bold"
                      href="/auth/logout"
                    >Đăng xuất</a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </nav>
    </header>

    {{{body}}}

    <button id="scrollToTop" style="display: none;">⯅</button>

    <footer class="bg-body-tertiary text-center">
      <!-- Grid container -->
      <div class="container p-4 pb-0">
        <!-- Section: Social media -->
        <section class="mb-4">
          <!-- Facebook -->
          <a
            data-mdb-ripple-init
            class="btn text-white btn-floating m-1"
            style="background-color: #3b5998;"
            href="#!"
            role="button"
          ><i class="fab fa-facebook-f"></i></a>

          <!-- Twitter -->
          <a
            data-mdb-ripple-init
            class="btn text-white btn-floating m-1"
            style="background-color: #55acee;"
            href="#!"
            role="button"
          ><i class="fab fa-twitter"></i></a>

          <!-- Google -->
          <a
            data-mdb-ripple-init
            class="btn text-white btn-floating m-1"
            style="background-color: #dd4b39;"
            href="#!"
            role="button"
          ><i class="fab fa-google"></i></a>

          <!-- Instagram -->
          <a
            data-mdb-ripple-init
            class="btn text-white btn-floating m-1"
            style="background-color: #ac2bac;"
            href="#!"
            role="button"
          ><i class="fab fa-instagram"></i></a>

          <!-- Linkedin -->
          <a
            data-mdb-ripple-init
            class="btn text-white btn-floating m-1"
            style="background-color: #0082ca;"
            href="#!"
            role="button"
          ><i class="fab fa-linkedin-in"></i></a>
          <!-- Github -->
          <a
            data-mdb-ripple-init
            class="btn text-white btn-floating m-1"
            style="background-color: #333333;"
            href="#!"
            role="button"
          ><i class="fab fa-github"></i></a>
        </section>
        <!-- Section: Social media -->
      </div>
      <!-- Grid container -->

      <!-- Copyright -->
      <div
        class="text-center p-3"
        style="background-color: rgba(0, 0, 0, 0.05);"
      >
        © 2020 Copyright HP
      </div>
      <!-- Copyright -->
    </footer>
    <script src="/js/index.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>

</html>